{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": "error",
    "space-before-blocks": "error",
    "object-curly-spacing": ["error", "always"],
    "quotes": [
      "error",
      "double"
    ],
    "indent": [
      "error",
      2
    ]
  }
}
